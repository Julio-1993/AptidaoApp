<AptidaoApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 0.5, 0.6, 0.9, 1  # Azul claro
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        text: "CIIC:"
        color: 0, 0, 0, 1
    TextInput:
        id: ciic_input
        multiline: False
        size_hint_y: None
        height: "40dp"

    Label:
        text: "Nome do Animal:"
        color: 0, 0, 0, 1
    TextInput:
        id: nome_input
        multiline: False
        readonly: True
        size_hint_y: None
        height: "40dp"

    Label:
        text: "Tipo de Aptidão:"
        color: 0, 0, 0, 1
    Spinner:
        id: tipo_aptidao
        text: "Selecione"
        values: ["Adoção", "Reintegração"]

    Label:
        text: "Status de Aptidão:"
        color: 0, 0, 0, 1

    GridLayout:
        cols: 2  # Duas colunas
        rows: 2  # Duas linhas
        spacing: 5
        size_hint_y: None
        height: "100dp"

        BoxLayout:
            CheckBox:
                id: status_apto
            Label:
                text: "Apto"
                color: 0, 0, 0, 1

        BoxLayout:
            CheckBox:
                id: status_inapto
            Label:
                text: "Inapto"
                color: 0, 0, 0, 1

        BoxLayout:
            CheckBox:
                id: status_apto_especial
            Label:
                text: "Apto-Especial"
                color: 0, 0, 0, 1

        BoxLayout:
            CheckBox:
                id: status_controle
            Label:
                text: "Controle de Espécie"
                color: 0, 0, 0, 1

    Label:
        text: "Motivos Aptidão:"
        color: 0, 0, 0, 1

    ScrollView:
        size_hint: (1, None)
        height: "200dp"  # Aumentando a altura do campo de texto
        TextInput:
            id: motivos_input
            size_hint_y: None
            height: "200dp"
            multiline: True

    Button:
        text: "Salvar"
        on_press: root.salvar_dados()
