<AptidaoApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'CIIC do Animal:'
    
    TextInput:
        id: ciic_input
        multiline: False
        on_text: root.buscar_nome(self, self.text)

    Label:
        text: 'Nome do Animal:'
    
    TextInput:
        id: nome_input
        multiline: False
        readonly: True

    Label:
        text: 'Tipo de Aptidão:'

    Spinner:
        id: tipo_aptidao
        text: 'Selecione'
        values: ['Adoção', 'Reintegração']

    Label:
        text: 'Status de Aptidão:'
    
    BoxLayout:
        CheckBox:
            id: status_apto
            on_active: root.deselecionar_outros(self, self.active)
        Label:
            text: 'Apto'

        CheckBox:
            id: status_inapto
            on_active: root.deselecionar_outros(self, self.active)
        Label:
            text: 'Inapto'

        CheckBox:
            id: status_apto_especial
            on_active: root.deselecionar_outros(self, self.active)
        Label:
            text: 'Apto-Especial'

        CheckBox:
            id: status_controle
            on_active: root.deselecionar_outros(self, self.active)
        Label:
            text: 'Controle de Espécie'

    Label:
        text: 'Motivos Aptidão:'

    ScrollView:
        size_hint: (1, None)
        height: 150
        TextInput:
            id: motivos_input
            size_hint_y: None
            height: 150
            multiline: True

    Button:
        text: 'Salvar'
        on_press: root.salvar_dados(self)
