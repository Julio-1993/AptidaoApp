<AptidaoApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    canvas.before:
        Color:
            rgba: 0.5, 0.6, 0.9, 1  # Azul claro
        Rectangle:
            size: self.size
            pos: self.pos

     Label:
        text: "CIIC:"
        color: 0, 0, 0, 1
    TextInput:
        id: ciic_input
        multiline: False
        size_hint_y: None
        height: "40dp"

    Label:
        text: "Nome do Animal:"
        color: 0, 0, 0, 1
    TextInput:
        id: nome_input
        multiline: False
        readonly: True
        size_hint_y: None
        height: "40dp"

    Label:
        text: "Tipo de Aptidão:"
        color: 0, 0, 0, 1
    Spinner:
        id: tipo_aptidao
        text: "Selecione"
        values: ["Adoção", "Reintegração"]

    Label:
        text: "Status de Aptidão:"
        color: 0, 0, 0, 1

    GridLayout:
        cols: 2  # Duas colunas
        rows: 2  # Duas linhas
        spacing: 10
        size_hint_y: None
        height: "100dp"

        BoxLayout:
            size_hint_x: None
            width: "150dp"
            CheckBox:
                id: status_apto
                on_active: root.deselecionar_outros(self)
            Label:
                text: "Apto"
                color: 0, 0, 0, 1
                size_hint_x: None
                width: "100dp"
                halign: "left"
                valign: "middle"

        BoxLayout:
            size_hint_x: None
            width: "150dp"
            CheckBox:
                id: status_inapto
                on_active: root.deselecionar_outros(self)
            Label:
                text: "Inapto"
                color: 0, 0, 0, 1
                size_hint_x: None
                width: "100dp"
                halign: "left"
                valign: "middle"

        BoxLayout:
            size_hint_x: None
            width: "150dp"
            CheckBox:
                id: status_apto_especial
                on_active: root.deselecionar_outros(self)
            Label:
                text: "Apto-Especial"
                color: 0, 0, 0, 1
                size_hint_x: None
                width: "100dp"
                halign: "left"
                valign: "middle"

        BoxLayout:
            size_hint_x: None
            width: "150dp"
            CheckBox:
                id: status_controle
                on_active: root.deselecionar_outros(self)
            Label:
                text: "Controle de Espécie"
                color: 0, 0, 0, 1
                size_hint_x: None
                width: "120dp"
                halign: "left"
                valign: "middle"

    Label:
        text: "Motivos Aptidão:"
        color: 0, 0, 0, 1

    ScrollView:
        size_hint: (1, None)
        height: "200dp"
        TextInput:
            id: motivos_input
            size_hint_y: None
            height: "200dp"
            multiline: True

    Button:
        text: "Salvar"
        on_press: root.salvar_dados()
